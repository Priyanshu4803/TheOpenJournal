<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <title>Open Journal</title>
    <link rel="icon" type="image/png" href="/images/feather_transparent3.png" />
  </head>
  <body>
    <!-- nav -->

    <%-include("partials/navbar.ejs") %>
    <!-- header -->
    <header>
      <div class="header-content"></div>
    </header>
    <!-- Latest post title -->

    <div class="latest-post-title" style="font-size: 15px; margin: 35px 0">
      <!-- Icon -->
      <div class="icon">
        <i class="fas fa-book-open"></i>
      </div>
      <h1>Top 10 Latest Posts</h1>
    </div>

    <!-- content -->
    <section class="container-flex">
      <%if(posts?.length <=0){%>
      <h2>No post found</h2>
      <%}else{%> <%posts.forEach((post) => { %>
      <article class="post-content">
        <p class="post-category"><span>Category: <%=post?.category%></span></p>
        <img
          style="border: 2px solid #70aeae"
          src="<%=post?.image%>"
          alt=""
          class="post-image"
        />
        <p class="post-info">
          <span class="post-author" style="word-break: break-all">
            <i class="fas fa-user"></i>
            <a href="#"><%=truncatePost(post?.user?.username)%></a>
          </span>
          <span class="post-date">
            <i class="far fa-calendar-alt"></i>
            <time datetime="2020-01-01"
              ><%=post?.createdAt.toLocaleDateString()%></time
            >
          </span>
        </p>
        <h1 class="post-title" style="text-transform: uppercase">
          <%=truncatePost(post?.title)%>
        </h1>

        <a href="/api/v1/posts/<%=post?._id%>" class="post-read-more"
          ><i class="fa-solid fa-arrow-right" style="font-size: 23px"></i
        ></a>
      </article>
      <%})%> <%}%>
    </section>
    <!-- footer -->
    <%-include("partials/footer.ejs")%>
  </body>
</html>
