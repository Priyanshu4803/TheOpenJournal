<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Post Page</title>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    />
    <link rel="stylesheet" href="/css/addPost2.css" />
    <link rel="icon" type="image/png" href="/images/feather_transparent3.png" />

    <script>
      // Client-side validation for image file size
      function validateImageSize() {
        var fileInput = document.getElementById("image");
        if (fileInput.files[0]) {
          var fileSize = fileInput.files[0].size; // Size in bytes
          var maxSize = 4 * 1024 * 1024; // 6MB in bytes
          if (fileSize > maxSize) {
            alert("Image size should not exceed 4MB");
            return false;
          }
        }
        return true;
      }
    </script>
  </head>
  <body>
    <%-include("../partials/navbar.ejs") %>

    <div class="wrapper">
      <form
        action="/api/v1/posts"
        method="POST"
        enctype="multipart/form-data"
        onsubmit="return validateImageSize()"
      >
        <h2>Add Post</h2>
        <% if (error) { %>
        <small class="error">
          <i class="fas fa-exclamation-circle"></i>
          <%= error %>
        </small>
        <% } %>
        <div class="input-field">
          <label for="name">Post Title *</label>
          <div class="bottom"><input type="text" name="title" id="name" /></div>
        </div>

        <div class="input-field">
          <label for="category">Category *</label>
          <div class="bottom">
            <select name="category" id="category">
              <option value="Technology">Technology</option>
              <option value="Travel">Travel</option>
              <option value="Food">Food</option>
              <option value="LifeStyle">LifeStyle</option>
              <option value="Education">Education</option>
              <option value="Fitness">Fitness</option>
              <option value="Finance">Finance</option>
              <option value="Sport">Sport</option>
              <option value="Photography">Photography</option>
              <option value="other">Other</option>
            </select>
          </div>
        </div>

        <div class="input-field">
          <label for="body">Post Body *</label>
          <div class="bottom">
            <textarea
              name="description"
              id="body"
              cols="30"
              rows="10"
            ></textarea>
          </div>
        </div>

        <div class="input-field">
          <label for="image">Post Image (Max 4MB) *</label>
          <div class="bottom">
            <input type="file" name="file" id="image" accept="image/*" />
          </div>
        </div>

        <button type="submit">Create</button>
      </form>
    </div>

    <div class="foot"><%-include("../partials/footer.ejs") %></div>
  </body>
</html>
