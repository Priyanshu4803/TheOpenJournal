<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <!-- Fontawesome -->
    <script
      src="https://kit.fontawesome.com/42a182743f.js"
      crossorigin="anonymous"
    ></script>
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
    />
    <!-- CSS -->
    <link rel="stylesheet" href="/css/profile.css" />
    <!-- <link rel="stylesheet" href="/css/style.css" /> -->
    <link rel="icon" type="image/png" href="/images/feather_transparent3.png" />

    <title>Profile</title>
  </head>
  <body>
    <!-- navbar -->
    <%-include("../partials/navbar.ejs") %>
    <div class="profile-container">
      <header style="background-image: url(<%=user?.coverImage%>)">
        <div class="icons-container">
          <p>
            <a href="/api/v1/users/upload-cover-photo-form"
              ><i class="fa-solid fa-camera"></i
            ></a>
          </p>

          <p>
            <a href="/api/v1/users/<%=user?._id%>"
              ><i class="fas fa-edit"></i
            ></a>
          </p>
          <p>
            <a href="/api/v1/users/update-user-password"
              ><i style="color: red" class="fas fa-solid fa-key"></i
            ></a>
          </p>
        </div>
        <!-- upload cover image icon -->
        <!-- <i class="fas fa-camera upload-btn"></i> -->
      </header>

      <!-- profile image -->

      <!-- personal details -->
      <div class="personal-container">
        <div class="details-wrapper">
          <div class="profile-img">
            <img src="<%=user?.profileImage%>" alt="profile image" />
            <!-- upload profile image icon -->
            <a href="/api/v1/users/upload-profile-photo-form"
              ><i class="fa-solid fa-camera"></i
            ></a>
          </div>
          <div class="details">
            <i class="fas fa-user"></i>
            <p>Name: <%=user?.fullname%></p>
          </div>
          <div class="details">
            <i class="fas fa-envelope"></i>
            <p>Email: <%=user?.email%></p>
          </div>
          <!-- date joined -->
          <div class="details">
            <i class="fas fa-calendar"></i>
            <p>Date Joined: <%=user?.createdAt.toLocaleDateString()%></p>
          </div>
        </div>
      </div>
    </div>
    <div class="latest-post-title" style="font-size: 15px; margin: 35px 0">
      <!-- Icon -->
      <i class="fas fa-book-open"></i>
      <h1>Posts created by you</h1>
    </div>

    <!-- content -->
    <section class="container-flex">
      <%if(user?.posts?.length<=0){ %>
      <h1>You have no posts</h1>
      <%}else{%> <%user?.posts?.forEach((post)=>{ %>
      <article class="post-content">
        <p class="post-category"><span>Category: <%=post?.category%></span></p>
        <img src="<%=post?.image%>" alt="" class="post-image" />
        <p class="post-info">
          <!-- <span class="post-author">
            <i class="fas fa-user"></i>
            <a href="#"><%=user?.fullname%></a>
          </span> -->
          <span class="post-date">
            <i class="far fa-calendar-alt"></i>
            <time datetime="2020-01-01"
              ><%=post?.createdAt.toLocaleDateString()%></time
            >
          </span>
        </p>
        <h1 class="post-title"><%=truncatePost(post?.title)%></h1>

        <a href="/api/v1/posts/<%=post?._id%>" class="post-read-more"
          >Visit Blog...</a
        >
      </article>
      <%})%> <%}%>
    </section>
    <!-- footer -->
    <%-include("../partials/footer.ejs") %>
  </body>
</html>
